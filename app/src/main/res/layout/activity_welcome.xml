<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:gravity="center">

    <!-- Logo "GPSLogger" -->
    <TextView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPSLogger"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="32dp" />

    <!-- Phrase de bienvenue -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to GPSLogger!"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="24dp" />

    <!-- Bouton Start Tracking -->
    <Button
        android:id="@+id/start_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Tracking"
        android:textSize="18sp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Bouton History -->
    <Button
        android:id="@+id/history_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:textSize="18sp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Bouton Donate -->
    <Button
        android:id="@+id/donate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donate"
        android:textSize="18sp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:padding="16dp"
        android:layout_marginBottom="24dp" />

    <!-- Choix des formats de sortie -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output Format:"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="8dp" />

    <CheckBox
        android:id="@+id/csv_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSV"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:checked="true" />

    <CheckBox
        android:id="@+id/kml_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KML"
        android:textSize="16sp"
        android:textColor="#FFFFFF" />
</LinearLayout>